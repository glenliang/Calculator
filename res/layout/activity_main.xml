<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="glen.calculator.MainActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical" >

    <fragment android:name="glen.calculator.FragmentRow0"
        android:id="@+id/fragRow0"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1.25"
        ></fragment>

    <fragment android:name="glen.calculator.FragmentRow1"
        android:id="@+id/fragRow1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        ></fragment>

    <fragment android:name="glen.calculator.FragmentRow2"
        android:id="@+id/fragRow2"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        ></fragment>

    <fragment android:name="glen.calculator.FragmentRow3"
        android:id="@+id/fragRow3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        ></fragment>

    <fragment android:name="glen.calculator.FragmentRow4"
        android:id="@+id/fragRow4"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        ></fragment>

    <fragment android:name="glen.calculator.FragmentRow5"
        android:id="@+id/fragRow5"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        ></fragment>

    

</LinearLayout>

